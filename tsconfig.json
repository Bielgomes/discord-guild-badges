{
  "compilerOptions": {
    "lib": ["esnext"],
    "types": ["node"],
    "module": "nodenext",
    "target": "esnext",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
